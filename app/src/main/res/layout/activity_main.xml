            app:nTabTitleSize="26sp"
            app:nTabTitleText="Tab E" />

        <org.ginryan.oemtab.tablayout.NTabView
            android:id="@+id/tabviewF"
            android:layout_width="90dp"
            android:layout_height="40dp"
            app:nTabTitleSize="26sp"
            app:nTabTitleText="Tab F" />


        <org.ginryan.oemtab.tablayout.NTabView
            android:id="@+id/tabviewG"
            android:layout_width="90dp"
            android:layout_height="40dp"
            app:nTabTitleSize="26sp"
            app:nTabTitleText="Tab G" />

        <org.ginryan.oemtab.tablayout.NTabView
            android:id="@+id/tabviewH"
