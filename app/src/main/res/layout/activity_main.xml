            android:id="@+id/tabviewD"
            android:layout_width="90dp"
            android:layout_height="40dp"
            app:nTabTitleSize="26sp"
            app:nTabTitleText="Tab D" />

        <org.ginryan.oemtab.tablayout.NTabView
            android:id="@+id/tabviewE"
            android:layout_width="90dp"
